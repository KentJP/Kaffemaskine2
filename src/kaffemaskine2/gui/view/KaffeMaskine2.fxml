    <children>
        <TextArea fx:id="txtarea" editable="false" layoutX="15.0" layoutY="63.0" mouseTransparent="true" prefHeight="112.0" prefWidth="232.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </TextArea>

        <Button fx:id="btnKakao" layoutX="82.0" layoutY="237.0" mnemonicParsing="false" onAction="#handleDrink" text="" />
        <Button fx:id="btnCapucino" layoutX="82.0" layoutY="274.0" mnemonicParsing="false" onAction="#handleDrink" text="" />
        <Button fx:id="btnKaffe" layoutX="82.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleDrink" text="" />
        <Button fx:id="btnCaffeLatte" layoutX="82.0" layoutY="311.0" mnemonicParsing="false" onAction="#handleDrink" text="" />

        <Label layoutX="127.0" layoutY="210.0" text="Coffee" />
        <Label layoutX="127.0" layoutY="247.0" text="Cocoa" />
        <Label layoutX="127.0" layoutY="284.0" text="Capucino" />
        <Label layoutX="127.0" layoutY="321.0" text="Cafe Latte" />

        <ImageView fitHeight="366.0" fitWidth="324.0" layoutX="262.0" layoutY="17.0">
            <image>
                <Image url="@../images/coffemaker.png" />
            </image>
        </ImageView>
        <ImageView fx:id="coffeeCup" layoutX="377.0" layoutY="252.0" onMouseClicked="#handleCup">
            <image>
                <Image url="@../images/cup-empty.png" />
            </image>
        </ImageView>
    </children>

    <stylesheets>
        <URL value="@KaffeMaskine2.css" />
    </stylesheets>
</AnchorPane>
